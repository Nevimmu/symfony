{% extends 'base.html.twig' %}

{% block title %}Hello BookController!{% endblock %}

{% block body %}
<style>
	.example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
	.example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
	<h1>Livres</h1>

	<h3>Ajoute un livre</h3>
	{{ form(form) }}

	<h3>Liste des livres</h3>
	<table>
		<tr>
			<th>ID</th>
			<th>Titre</th>
			<th>Prix</th>
			<th>Lu</th>
			<th>Reading</th>
			<th>Temps passé</th>
		</tr>
		{% for book in books %}
		<tr>
			<td>{{ book.id }}</td>
			<td>{{ book.titre }}</td>
			<td>{{ book.prix }}€</td>

			{% if book.lu == 1 %}
			<td><a href="/book/{{ book.id }}/lu">Oui</a></td>
			{% else %}
			<td><a href="/book/{{ book.id }}/lu">Non</a></td>
			{% endif %}

			{% if book.reading == 1 %}
			<td><a href="/book/{{ book.id }}/reading">Oui</a></td>
			{% else %}
			<td><a href="/book/{{ book.id }}/reading">Non</a></td>
			{% endif %}

			<td>{{ book.totalTime|date('H:i:s') }}</td>
			<td>{{ book.author }}</td>
			<td><a href="/book/{{ book.id }}/delete">x</a></td>
		</tr>
		{% endfor %}
	</table>
	<a href="/book/reading/stopall"><button>Stop all</button></a>

	{% for author in authors %}
	<hr>
	<h3>{{ author.name }}</h3>
	<table>
		<tr>
			<th>ID</th>
			<th>Titre</th>
			<th>Prix</th>
			<th>Lu</th>
			<th>Reading</th>
			<th>Temps passé</th>
			<th>Auteur</th>
		</tr>

		{% for book in books %}
			{% if author.name == book.author %}
				<tr>
					<td>{{ book.id }}</td>
					<td>{{ book.titre }}</td>
					<td>{{ book.prix }}€</td>

					{% if book.lu == 1 %}
					<td><a href="/book/{{ book.id }}/lu">Oui</a></td>
					{% else %}
					<td><a href="/book/{{ book.id }}/lu">Non</a></td>
					{% endif %}

					{% if book.reading == 1 %}
					<td><a href="/book/{{ book.id }}/reading">Oui</a></td>
					{% else %}
					<td><a href="/book/{{ book.id }}/reading">Non</a></td>
					{% endif %}

					<td>{{ book.totalTime|date('H:i:s') }}</td>
					<td><a href="/book/{{ book.id }}/delete">x</a></td>
				</tr>
			{% endif %}
		{% endfor %}
	</table>
	{% endfor %}

</div>
{% endblock %}
